{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyHere123456789012345678901234567890",
    "Issuer": "ChatService",
    "Audience": "ChatServiceUsers",
    "ExpirationMinutes": 60
  },
  "ChatSettings": {
    "MaxConcurrentChatsPerOperator": 5,
    "SessionTimeoutMinutes": 5,
    "OperatorHeartbeatIntervalSeconds": 30,
    "MessageCacheExpiryMinutes": 30,
    "SessionCacheExpiryMinutes": 15
  },
  "RabbitMQ": {
    "HostName": "localhost",
    "UserName": "guest",
    "Password": "guest",
    "VirtualHost": "/",
    "Port": 5672,
    "ExchangeName": "event_exchange",
    "QueueName": "socket_queue",
    "RoutingKeyPattern": "events.#"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/chat-service-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}
